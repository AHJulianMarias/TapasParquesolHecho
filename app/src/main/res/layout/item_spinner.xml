<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/descripcionNombredelBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:text="nombre del bar"
        app:layout_constraintEnd_toEndOf="@+id/tvBar"
        app:layout_constraintStart_toStartOf="@+id/tvBar"
        app:layout_constraintTop_toBottomOf="@+id/tvBar" />

    <TextView
        android:id="@+id/tvBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Bar"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagenCiudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="24dp"
        android:src="@mipmap/ic_bar"
        app:layout_constraintEnd_toEndOf="@+id/descripcionNombredelBar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/descripcionNombredelBar"
        app:layout_constraintTop_toBottomOf="@+id/descripcionNombredelBar" />
</androidx.constraintlayout.widget.ConstraintLayout>